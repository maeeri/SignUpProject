@model SignUpProject.Models.ViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="container">
    <h4>Camp</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Camp.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Camp.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Camp.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Camp.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Camp.Capacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Camp.Capacity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Camp.Start)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Camp.Start)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Camp.End)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Camp.End)
        </dd>
    </dl>
</div>
<div>
    <br />
    <br />
    <h4>Staff</h4>
    <hr />
    <table>
        @{
            if (Model.Counselors.Count > 0)
            {
                var x = 1;
                foreach (var person in Model.Counselors)
                {
                    Model.Staff = Model.CompleteStaff.FirstOrDefault(x => x.Counselor == person.Id && x.Camp == Model.Camp.Id);
                    <tr>
                        <td>@x</td>
                        <td>@person.FirstName</td>
                        <td>@person.LastName</td>
                        <td>@Html.DisplayFor(x => x.Staff.IsInCharge)</td>
                    </tr>
                    x++;
                }
            }
            else
            {
                <div>
                    No councelors yet
                </div>
            }
        }

    </table>
    <br />
    <br />
    <h4>Campers</h4>
    <hr />
    <table>
        @{
            var i = 1;
            if (Model.Campers.Count > 0)
                foreach (var person in Model.Campers)
                {
                    <tr>
                        <td>@i</td>
                        <td>@person.FirstName</td>
                        <td>@person.LastName</td>
                    </tr>
                    i++;
                }
        }
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Camp.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>