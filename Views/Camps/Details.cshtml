@model SignUpProject.Models.ViewModel
@inject IViewLocalizer Localizer
@inject IOptions<RequestLocalizationOptions> LocOptions

@{
    ViewData["Title"] = "Details";
}
<div class="contents">
<h1>Details</h1>

<div>
    <h4>Camp</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Camp.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Camp.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Camp.Location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Camp.Location)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Camp.Capacity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Camp.Capacity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Camp.Start)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Camp.Start)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Camp.End)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Camp.End)
        </dd>
    </dl>
    
    <hr/>

    <table>
        <thead>
        <h4>Staff</h4>
        </thead>
        <tbody>
        <tr>
            <th>
                First name
            </th>
            <th>
                Last name
            </th>
            <th>
                Tel
            </th>
            <th>

            </th>
        </tr>
        @{
            if (Model.Counselors.Count > 0)
            {
                foreach (var item in Model.Counselors)
                    {
                        <tr>
                            <td>
                                @item.FirstName
                            </td>
                            <td>
                                @item.LastName
                            </td>
                            <td>
                                @item.Tel
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id">
                                    <span title="@Localizer["details"]" class="material-symbols-outlined">
                                        info
                                    </span>
                                </a>
                            </td>
                        </tr>
                    }
            }
            
        }
        </tbody>
    </table>
    <br/>
    <hr/>
    <br/>
    
    <table>
        <thead>
        <h4>Campers</h4>
        </thead>
        <tbody>
        <tr>
            <th>
                First name
            </th>
            <th>
                Last name
            </th>
            <th>
                Guardian name
            </th>
            <th>
                Guardian tel
            </th>
            <th>

            </th>
        </tr>
        @{
            if (Model.Campers.Count > 0)
            {
                foreach (var item in Model.Campers)
                {
                    <tr>
                        <td>
                            @item.FirstName
                        </td>
                        <td>
                            @item.LastName
                        </td>
                        <td>
                            @Model.Guardians.FirstOrDefault(x => x.Id == item.Guardian).Name
                        </td>
                        <td>
                            @Model.Guardians.FirstOrDefault(x => x.Id == item.Guardian).Tel
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id">
                                <span title="@Localizer["details"]" class="material-symbols-outlined">
                                    info
                                </span>
                            </a>
                        </td>
                    </tr>
                }
            }
            
        }
        </tbody>
    </table>
    <br/>
    <hr/>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Camp.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
</div>