@model SignUpProject.Models.ViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Camp</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Camp.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Camp.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Camp.Location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Camp.Location)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Camp.Capacity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Camp.Capacity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Camp.Start)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Camp.Start)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Camp.End)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Camp.End)
        </dd>
    </dl>
    
    <dl>
        <div>
            Staff
        </div>
        <div>
            @{
                foreach (var item in Model.Counselors)
                {
                    <dt>
                        @Html.DisplayNameFor(model => model.Counselor.FirstName)
                    </dt>
                    <dd>
                        @item.FirstName
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Counselor.LastName)
                    </dt>
                    <dd>
                        @item.LastName
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Counselor.Tel)
                    </dt>
                    <dd>
                        @item.Tel
                    </dd>
                }
            }
        </div>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Camp.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
