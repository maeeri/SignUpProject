@model SignUpProject.Models.Counselor
@inject IViewLocalizer Localizer
@inject IOptions<RequestLocalizationOptions> LocOptions

@{
    ViewData["Title"] = Localizer["title"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="contents">
<h1>@Localizer["title"] </h1>

<div>
        <h4>@Localizer["counselor"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
                @Localizer["firstname"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
                @Localizer["lastname"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
                @Localizer["email"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
                @Localizer["tel"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tel)
        </dd>
        <dt class = "col-sm-2">
                @Localizer["street"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StreetAddress)
        </dd>
        <dt class = "col-sm-2">
                @Localizer["postcode"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PostalCode)
        </dd>
        <dt class = "col-sm-2">
                @Localizer["city"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
    </dl>
</div>
<div>
        <a asp-action="Edit" asp-route-id="@Model?.Id">@Localizer["edit"]</a> |
        <a asp-action="Counselors">@Localizer["list"]</a>
</div>
</div>