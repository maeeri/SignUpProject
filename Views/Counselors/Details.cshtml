@model SignUpProject.Models.ViewModel
@inject IViewLocalizer Localizer
@inject IOptions<RequestLocalizationOptions> LocOptions

@{
    ViewData["Title"] = Localizer["title"];
}
<div class="contents">
    <h1>@Localizer["title"] </h1>

    <div>
        <h4>@Localizer["counselor"]</h4>
        <hr />
        <div class="row">
            <div class="col-sm-12">

                <table>
                    <thead>

                    </thead>
                    <tbody>
                    <tr>
                        <td class="fw-bold">
                            @Localizer["firstname"]
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Counselor.FirstName)
                        </td>
                    </tr>
                    <tr>
                        <td class="fw-bold">
                            @Localizer["lastname"]
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Counselor.LastName)
                        </td>
                    </tr>
                    <tr>
                        <td class="fw-bold">
                            @Localizer["email"]
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Counselor.Email)
                        </td>
                    </tr>
                    <tr>
                        <td class="fw-bold">
                            @Localizer["tel"]
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Counselor.Tel)
                        </td>
                    </tr>
                    <tr>
                        <td class="fw-bold">
                                
                            @Localizer["street"]
                        </td>
                            
                        <td>
                            @Html.DisplayFor(model => model.Counselor.StreetAddress)
                        </td>
                    </tr>
                    <tr>
                        <td class="fw-bold">
                            @Localizer["postcode"]
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Counselor.PostalCode)
                        </td>
                    </tr>
                    <tr>
                        <td class="fw-bold">
                            @Localizer["city"]
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Counselor.City)
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
            
            <div class="col-sm-12">
                <h4>@Localizer["camps"]</h4>
                <table>
                    <tbody>
                    @foreach (var camp in Model.Camps)
                    {
                        <tr>
                            <td class="fw-bold">
                                @camp.Name
                            </td>
                            <td>
                                @camp.Start.ToString("d.M.yyyy")-@camp.End.ToString("d.M.yyyy")
                            </td>
                            
                            @{
                                var c = Model.CompleteStaff.FirstOrDefault(x => x.Camp == camp.Id && x.Counselor == Model.Counselor.Id);
                                if (c.IsInCharge)
                                {
                                    <td>
                                        @Localizer["incharge"]
                                    </td>
                                }
                            }
                            
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
            <br/>
        </div>
    </div>
    <hr/>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Counselor.Id">@Localizer["edit"]</a> |
        <a asp-action="Counselors">@Localizer["list"]</a>
    </div>
</div>